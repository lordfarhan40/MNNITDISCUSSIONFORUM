<html>
    {{>header}}
    <body>
        {{>nav}}
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-offset-3 col-lg-6">
            <h1 class="text-center">MNNIT FORUM</h1>
            <ul class="nav nav-tabs nav-justified" style="margin-top:50px;">
                <li class="active"><a href="#login" aria-controls="login" role="tab" data-toggle="tab">Login</a></li>
                <li><a href="#signup" aria-controls="signup" role="tab" data-toggle="tab">Signup</a></li>
            </ul>
                <div style="padding:20px">
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="login">
                            {{#if error}}
                            <div class="alert alert-danger alert-dismissable">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Error!</strong> Wrong username/password combination entered.
                            </div>
                            {{/if}}
                            {{#if banned}}
                            <div class="alert alert-danger alert-dismissable">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Error!</strong> Your account has been banned. Please contact admin.
                            </div>
                            {{/if}}
                            <form id="loginForm" method="POST" action="/login">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="email" class="form-control" id="email" placeholder="Enter your email" name="email" required>
                                </div>
                                <div class="form-group">
                                    <label for="password">Password&nbsp;&nbsp;</label><a style="font-size:10px" href="#">Forgot Password?</a>
                                    <input type="password" class="form-control" id="password" placeholder="Enter your password" name="password" required>
                                </div>
                                <button id="loginSubmit" class="btn btn-primary btn-block" formid="loginForm">Login</button><a class="btn btn-block btn-info" href="/">Go back.</a>
                            </form>
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="signup">
                            <form id="loginForm" method="POST" action="/signup">
                                <div class="form-group">
                                    <label for="name">Name</label>
                                    <input type="text" class="form-control" id="name" placeholder="Enter your full name" name="name" required>
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="email" class="form-control" id="email" placeholder="Enter your email" name="email" required>
                                </div>
                                <div class="form-group">
                                    <label for="password">Password &nbsp;<span style="font-size: 12px;color:darkslategray">(Minimum length 8 characters)</span></label>
                                    <input pattern=".{8,}"type="password" class="form-control" id="password" placeholder="Enter a password" name="password" required>
                                </div>                     
                                <button id="submitButton" class="btn btn-primary btn-block" formid="createForm">Create Account</button><a class="btn btn-block btn-info" href="/">Go back.</a>
                            </form>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>