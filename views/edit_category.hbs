<html>
    {{>header}}
    <body>
        {{>nav_user}}
        <div style="width:60%;margin:auto">
            <form method="POST" action="/edit_category" id="mainForm">
                <div class="form-group">
                    <label for="name">Name of the category: </label>
                    <input type="text" class="form-control" id="name" placeholder="Enter the name of the new category" name="name" {{#if edit}} value="{{categoryName}}" {{/if}} required/>
                </div>
                <div class="form-group">
                    <label for="description">Description of category: </label>
                    <textarea class="form-control" rows="10" id="description" placeholder="Enter the description of the new category" name="description" required>{{#if edit}}{{description}}{{/if}}</textarea>
                </div>
                {{#if edit}}
                <input type="hidden" name="_id" value="{{_id}}">
                {{/if}}
                <button class="btn btn-info btn-block">
                    {{#if edit}}
                        Save changes
                    {{else}}
                    Add Category
                    {{/if}}
                </button>
            </form>
        </div>
    </body>
</html>