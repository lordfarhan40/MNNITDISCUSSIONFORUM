<html>
    {{>header}}
    <body>
        {{>nav}}
        <div class="container col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-12 col-xs-12">
            <h3 class="text-center">
                Manage Account
            </h3>
            <div class="input-group" style="margin-top:20px">
                <span class="input-group-addon" id="basic-addon1" style="margin-top:20px">Name</span>
                <input type="text" class="form-control" placeholder="Enter your name" value="{{user.name}}">
            </div>
            <div class="input-group" style="margin-top:20px">
                <span class="input-group-addon" id="basic-addon1">Email</span>
                <input type="email" class="form-control" placeholder="Username" aria-describedby="basic-addon1" value="{{user.email}}">
            </div>
            <a class="btn btn-info btn-block" href="#" style="margin-top:20px">Save Info</a>
            <h3 class="text-center">Change password</h3>
            <div class="input-group" style="margin-top:20px;width:100%">
                <input type="password" class="form-control" placeholder="Old password" aria-describedby="basic-addon1">
            </div>
            <div class="input-group" style="margin-top:20px;width:100%">
                <input type="password" class="form-control" placeholder="New password (Min 8 characters)" aria-describedby="basic-addon1">
            </div>
            <a class="btn btn-info btn-block" href="#" style="margin-top:20px">Chane password</a>
        </div>
    </body>
</html>