<html>
    {{>header}}
    <body>
        {{>nav}}
        <div class="container">
            <h3 class="text-center">Manage subscriptions</h3>
            <table class="table">
                {{#each subscriptions}}
                <tr>    
                    <td>{{this.user.name}}</td>
                    <td class="text-center">
                        {{#if this.accepted}}
                            <a class="btn btn-danger" href="/remove_subscription?userId={{this.user._id}}&threadId={{../threadId}}">Remove</a>
                        {{else}}
                            <a class="btn btn-info" href="/accept_subscription?userId={{this.user._id}}&threadId={{../threadId}}">Approve</a>
                        {{/if}}
                    </td>
                </tr>
                {{else}}
                    <tr>
                        <td class="text-center">
                            Sorry but there are no more active subscribers or subscription request for your thread.
                        </td>
                    </tr>
                {{/each}}
            </table>
        </div>
    </body>
    <script>
        $(".btn").attr("href",$(".btn").attr("href")+"&redirect="+(location.pathname+location.search).substr(1));
    </script>
</html>