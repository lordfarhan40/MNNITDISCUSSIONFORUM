<html>
    {{>header}}
    <body>
        {{>nav}}
        <h2 class="text-center" style="margin-top:50px;margin-bottom:50px">{{catName}}</h2>
        <div class="row">
            <div class="col-lg-offset-1 col-lg-10 col-md-10 col-md-offset-1 col-sm-12 col-xs-12">
                {{{pagination}}}
                <div class="panel panel-default">
                    <table class="table table-bordered">
                        <col width="60%">
                        <col width="40%">
                        {{#each threads}}
                        <tr>
                            <td style="padding:10px"><a href='/thread?_id={{this._id}}' style="font-size: 23px">
                            {{#if this.pinned}}
                                <span style="font-size: 15px">Pinned: </span>
                            {{/if}}
                            {{this.subject}}</a><br><strong>Thread by:</strong> {{this.threadBy.name}}
                            </td>
                            <td style="padding:10px"><strong>Replies: </strong>{{this.count}}<br><strong>Last updated:</strong> {{#dateFormat this.lastPost.date}}{{/dateFormat}}<br><strong>By:</strong>{{this.lastPost.postBy.name}}</td>
                            {{#if ../admin}}
                            <td><a href="/pin_thread?_id={{this._id}}"><span style="margin-top:10px" class="glyphicon glyphicon-pushpin" aria-hidden="true"></span></a><br><a href="delete_thread?_id={{this._id}}"><span style="margin-top:15px" class="glyphicon glyphicon-trash" aria-hidden="true" style=""></span></a></td>
                            {{/if}}
                        </tr>
                        {{else}}
                        <tr>
                            <td class="text-center">Sorry but there are no threads in this category. Be the first one to add new</td>
                        </tr>
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>